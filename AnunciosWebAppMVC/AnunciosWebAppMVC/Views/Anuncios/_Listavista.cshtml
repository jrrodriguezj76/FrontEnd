@model IEnumerable<AnunciosWebMVC.Anuncios.Servicios.DataTransferO.AnuncioView>
<div class="w-auto row" >
    @foreach (var item in Model)
    {
        <div class="col-sm-3 col-lg-3 col-md-3" >
            <div class="card" style="width: 12rem;" >
                <h5 class="card-text">@item.Titulo.ToString()</h5>
                @{ if (!(item.Imagen == null))
                    {
                        byte[] img = item.Imagen;
                        string imageBase64Data = Convert.ToBase64String(img, 0, img.Length);
                        string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
                        <img class="card-img-top" width="300" height="200" src="data:image/jpg;base64,@imageBase64Data" alt="User picture"> }
                    else
                    {<img class="card-img-top img-adjusted" src="" alt="User picture"> } }
                <div class="card-body">

                    <h6>
                        <a>@item.Precio</a>
                    </h6><p>@item.Tipo</p>
                </div>
            </div>
        </div>}
</div>