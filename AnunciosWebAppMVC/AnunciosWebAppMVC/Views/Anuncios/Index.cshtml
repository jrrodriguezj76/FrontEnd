@model IEnumerable<AnunciosWebMVC.Anuncios.Servicios.Models.Anuncio>

@{
    ViewData["Title"] = "Anuncios Publicados";
}

<div class="formulario">


    <h1>Index</h1>

    <p>
        <a asp-action="Create">Nuevo Anuncio</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdTipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @{
                            if (!(item.Imagen == null))
                            {
                                byte[] img = item.Imagen;
                                string imageBase64Data = Convert.ToBase64String(img, 0, img.Length);
                                string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
                                <img src="data:image/jpg;base64,@imageBase64Data" width="50" height="35" alt="User picture">
                            }
                            else
                            {
                                <img src="" alt="User picture">
                            }
                        }

                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>